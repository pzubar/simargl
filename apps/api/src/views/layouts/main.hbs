<!DOCTYPE html>
<html lang="en" class="h-full bg-gray-50">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="{{description}}" />
    <title>{{title}} - Simargl Admin</title>
    
    <!-- Tailwind CSS -->
    <link href="/public/output.css" rel="stylesheet" />
    
    <!-- Heroicons -->
    <script src="https://cdn.jsdelivr.net/npm/heroicons@2.0.18/24/outline/index.js" type="module"></script>
    
    <!-- Alpine.js for interactive components -->
    <script defer src="https://cdn.jsdelivr.net/npm/alpinejs@3.x.x/dist/cdn.min.js"></script>
</head>
<body class="h-full">
    <div class="min-h-full">
        {{#if showNavigation}}
            {{> navigation}}
        {{/if}}
        
        <main class="{{#if showNavigation}}lg:pl-72{{/if}}">
            {{#if pageHeader}}
                <div class="px-4 py-6 sm:px-6 lg:px-8">
                    <div class="border-b border-gray-200 pb-4">
                        {{#if breadcrumbs}}
                            <nav class="flex mb-4" aria-label="Breadcrumb">
                                <ol class="flex items-center space-x-4">
                                    {{#each breadcrumbs}}
                                        <li class="flex">
                                            {{#if @last}}
                                                <span class="text-gray-500 text-sm font-medium">{{this.title}}</span>
                                            {{else}}
                                                <a href="{{this.url}}" class="text-gray-400 hover:text-gray-500 text-sm font-medium">{{this.title}}</a>
                                                <svg class="flex-shrink-0 h-5 w-5 text-gray-300 ml-4" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 20 20" aria-hidden="true">
                                                    <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z"/>
                                                </svg>
                                            {{/if}}
                                        </li>
                                    {{/each}}
                                </ol>
                            </nav>
                        {{/if}}
                        
                        <div class="md:flex md:items-center md:justify-between">
                            <div class="flex-1 min-w-0">
                                <h1 class="text-2xl font-bold leading-7 text-gray-900 sm:text-3xl sm:truncate">
                                    {{pageHeader.title}}
                                </h1>
                                {{#if pageHeader.description}}
                                    <p class="mt-1 text-sm text-gray-500">{{pageHeader.description}}</p>
                                {{/if}}
                            </div>
                            {{#if pageHeader.actions}}
                                <div class="mt-4 flex md:mt-0 md:ml-4">
                                    {{#each pageHeader.actions}}
                                        <a href="{{this.url}}" class="{{this.class}}">
                                            {{#if this.icon}}
                                                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    {{{this.icon}}}
                                                </svg>
                                            {{/if}}
                                            {{this.text}}
                                        </a>
                                    {{/each}}
                                </div>
                            {{/if}}
                        </div>
                    </div>
                </div>
            {{/if}}
            
            <div class="{{#if pageHeader}}px-4 sm:px-6 lg:px-8{{else}}px-4 py-6 sm:px-6 lg:px-8{{/if}}">
                {{#if alerts}}
                    {{#each alerts}}
                        <div class="rounded-md p-4 mb-4 {{#if (eq this.type 'success')}}bg-green-50 border border-green-200{{else if (eq this.type 'error')}}bg-red-50 border border-red-200{{else if (eq this.type 'warning')}}bg-yellow-50 border border-yellow-200{{else}}bg-blue-50 border border-blue-200{{/if}}">
                            <div class="flex">
                                <div class="ml-3">
                                    <p class="text-sm font-medium {{#if (eq this.type 'success')}}text-green-800{{else if (eq this.type 'error')}}text-red-800{{else if (eq this.type 'warning')}}text-yellow-800{{else}}text-blue-800{{/if}}">
                                        {{this.message}}
                                    </p>
                                </div>
                            </div>
                        </div>
                    {{/each}}
                {{/if}}
                
                {{{body}}}
            </div>
        </main>
    </div>
    
    <!-- Scripts -->
    <script>
        // Delete confirmation handler
        window.confirmDelete = function(id, name, endpoint) {
            if (confirm(`Are you sure you want to delete "${name}"? This action cannot be undone.`)) {
                fetch(endpoint + '/' + id, { method: 'DELETE' })
                    .then(response => {
                        if (response.ok) {
                            location.reload();
                        } else {
                            alert('Failed to delete item');
                        }
                    })
                    .catch(error => {
                        alert('Error: ' + error.message);
                    });
            }
        };
    </script>
</body>
</html> 