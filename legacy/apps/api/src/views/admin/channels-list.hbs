<!-- Channels List -->
<div class="bg-white shadow rounded-lg">
  <div class="px-4 py-5 sm:p-6">
    {{#if channels.length}}
      <div class="overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Channel
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Type
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Schedule
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Fetch Count
              </th>
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                Created
              </th>
              <th scope="col" class="relative px-6 py-3">
                <span class="sr-only">Actions</span>
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#each channels}}
              <tr class="hover:bg-gray-50">
                <td class="px-6 py-4 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-10 w-10">
                      <div class="h-10 w-10 {{#if (eq this.sourceType 'YOUTUBE')}}bg-red-100 text-red-600{{else if (eq this.sourceType 'TELEGRAM')}}bg-blue-100 text-blue-600{{else}}bg-gray-100 text-gray-600{{/if}} rounded-lg flex items-center justify-center">
                        {{#if (eq this.sourceType 'YOUTUBE')}}
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M23.498 6.186a2.999 2.999 0 0 0-2.11-2.11C19.505 3.546 12 3.546 12 3.546s-7.505 0-9.388.53A2.999 2.999 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a2.999 2.999 0 0 0 2.11 2.11c1.883.53 9.388.53 9.388.53s7.505 0 9.388-.53a2.999 2.999 0 0 0 2.11-2.11C24 15.93 24 12 24 12s0-3.93-.502-5.814z"></path>
                            <path fill="white" d="m9.545 15.568 6.364-3.568-6.364-3.568v7.136z"></path>
                          </svg>
                        {{else if (eq this.sourceType 'TELEGRAM')}}
                          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                            <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.568 8.16l-1.61 7.515c-.12.513-.44.64-.89.4l-2.463-1.815-1.187 1.14c-.131.131-.243.243-.5.243l.179-2.525 4.61-4.158c.2-.178-.043-.278-.31-.1l-5.685 3.585-2.45-.766c-.532-.166-.543-.532.112-.788l9.57-3.687c.444-.166.833.1.693.787z"></path>
                          </svg>
                        {{else}}
                          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                          </svg>
                        {{/if}}
                      </div>
                    </div>
                    <div class="ml-4">
                      <div class="text-sm font-medium text-gray-900">{{this.name}}</div>
                      <div class="text-sm text-gray-500">
                        <code class="bg-gray-100 px-2 py-1 rounded text-xs">{{this.sourceId}}</code>
                      </div>
                    </div>
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap">
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium {{#if (eq this.sourceType 'YOUTUBE')}}bg-red-100 text-red-800{{else if (eq this.sourceType 'TELEGRAM')}}bg-blue-100 text-blue-800{{else}}bg-gray-100 text-gray-800{{/if}}">
                    {{this.sourceType}}
                  </span>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  <code class="bg-gray-100 px-2 py-1 rounded text-xs">{{this.cronPattern}}</code>
                  <div class="text-xs text-gray-500 mt-1">
                    {{#if (eq this.cronPattern '0 0 * * *')}}Daily at midnight{{else if (eq this.cronPattern '0 */6 * * *')}}Every 6 hours{{else if (eq this.cronPattern '0 */12 * * *')}}Every 12 hours{{else}}Custom schedule{{/if}}
                  </div>
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                  {{this.fetchLastN}}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                  {{formatDate this.createdAt}}
                </td>
                <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                  <div class="flex items-center space-x-2">
                    {{#if (eq this.sourceType 'YOUTUBE')}}
                      <button onclick="pollChannelNow('{{this._id}}')" class="text-green-600 hover:text-green-900 text-xs bg-green-50 hover:bg-green-100 px-2 py-1 rounded" title="Poll now">
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"></path>
                        </svg>
                      </button>
                    {{/if}}
                    <a href="/admin/channels/{{this._id}}" class="text-blue-600 hover:text-blue-900 text-xs bg-blue-50 hover:bg-blue-100 px-2 py-1 rounded">View</a>
                    <a href="/admin/channels/{{this._id}}/edit" class="text-yellow-600 hover:text-yellow-900 text-xs bg-yellow-50 hover:bg-yellow-100 px-2 py-1 rounded">Edit</a>
                    <button onclick="confirmDelete('{{this._id}}', '{{this.name}}', '/admin/channels')" class="text-red-600 hover:text-red-900 text-xs bg-red-50 hover:bg-red-100 px-2 py-1 rounded">Delete</button>
                  </div>
                </td>
              </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    {{else}}
      <!-- Empty State -->
      <div class="text-center py-12">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.5-3h15l-3.75-3.75h0L12 4.5l-2.25 8.25h0L6 16.5z"></path>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No channels</h3>
        <p class="mt-1 text-sm text-gray-500">Get started by creating your first channel.</p>
        <div class="mt-6">
          <a href="/admin/channels/new" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add your first channel
          </a>
        </div>
      </div>
    {{/if}}
  </div>
</div>

<script>
  async function pollChannelNow(channelId) {
    if (confirm('Trigger immediate polling for this channel?')) {
      try {
        const response = await fetch(`/admin/channels/${channelId}/poll-now`, { method: 'POST' });
        const result = await response.json();
        
        if (result.success) {
          alert(result.message);
        } else {
          alert('Error: ' + result.message);
        }
      } catch (error) {
        alert('Error: ' + error.message);
      }
    }
  }
</script> 