<!-- Recurring Job Management Card -->
<div class="bg-white shadow rounded-lg mb-8">
  <div class="px-4 py-5 sm:p-6">
    <div class="sm:flex sm:items-center sm:justify-between">
      <div>
        <h3 class="text-lg leading-6 font-medium text-gray-900">ðŸ”„ Recurring Job Management</h3>
        <div class="mt-1 max-w-2xl text-sm text-gray-500">
          <p>Manage periodic channel polling for all YouTube channels</p>
        </div>
      </div>
    </div>
    <div class="mt-5 sm:flex sm:items-center sm:space-x-3">
      <button onclick="startAllPolling()" type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500">
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h1m4 0h1m-6 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        Start All Polling
      </button>
      <button onclick="stopAllPolling()" type="button" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500">
        <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 9l3 3m0 0l3-3m-3 3V8"></path>
        </svg>
        Stop All Polling
      </button>
    </div>
    <div id="jobStatus" class="mt-4 hidden">
      <div id="jobStatusContent" class="rounded-md p-4"></div>
    </div>
  </div>
</div>

<!-- Quick Actions Grid -->
<div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
  <!-- Recent Channels -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Channels</h3>
        <div class="mt-3 sm:mt-0 sm:ml-4">
          <a href="/admin/channels/new" class="inline-flex items-center px-3 py-2 border border-transparent text-sm leading-4 font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="-ml-0.5 mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
            </svg>
            Add Channel
          </a>
        </div>
      </div>
      <div class="mt-6">
        {{#if recentChannels.length}}
          <ul class="divide-y divide-gray-200">
            {{#each (slice recentChannels 0 5)}}
              <li class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="flex-shrink-0">
                    <div class="w-8 h-8 {{#if (eq this.sourceType 'YOUTUBE')}}bg-red-100 text-red-600{{else if (eq this.sourceType 'TELEGRAM')}}bg-blue-100 text-blue-600{{else}}bg-gray-100 text-gray-600{{/if}} rounded-full flex items-center justify-center">
                      {{#if (eq this.sourceType 'YOUTUBE')}}
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M23.498 6.186a2.999 2.999 0 0 0-2.11-2.11C19.505 3.546 12 3.546 12 3.546s-7.505 0-9.388.53A2.999 2.999 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a2.999 2.999 0 0 0 2.11 2.11c1.883.53 9.388.53 9.388.53s7.505 0 9.388-.53a2.999 2.999 0 0 0 2.11-2.11C24 15.93 24 12 24 12s0-3.93-.502-5.814z"></path>
                          <path fill="white" d="m9.545 15.568 6.364-3.568-6.364-3.568v7.136z"></path>
                        </svg>
                      {{else if (eq this.sourceType 'TELEGRAM')}}
                        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                          <path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm5.568 8.16l-1.61 7.515c-.12.513-.44.64-.89.4l-2.463-1.815-1.187 1.14c-.131.131-.243.243-.5.243l.179-2.525 4.61-4.158c.2-.178-.043-.278-.31-.1l-5.685 3.585-2.45-.766c-.532-.166-.543-.532.112-.788l9.57-3.687c.444-.166.833.1.693.787z"></path>
                        </svg>
                      {{else}}
                        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 10l4.553-2.276A1 1 0 0121 8.618v6.764a1 1 0 01-1.447.894L15 14M5 18h8a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
                        </svg>
                      {{/if}}
                    </div>
                  </div>
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">{{this.name}}</p>
                    <p class="text-sm text-gray-500 truncate">{{this.sourceType}} â€¢ {{this.cronPattern}}</p>
                  </div>
                  <div class="flex-shrink-0">
                    <a href="/admin/channels/{{this._id}}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</a>
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
          {{#if (gt recentChannels.length 5)}}
            <div class="mt-4">
              <a href="/admin/channels" class="text-sm text-blue-600 hover:text-blue-800 font-medium">View all {{recentChannels.length}} channels â†’</a>
            </div>
          {{/if}}
        {{else}}
          <div class="text-center py-6">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 20.25h12m-7.5-3v3m3-3v3m-10.5-3h15l-3.75-3.75h0L12 4.5l-2.25 8.25h0L6 16.5z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No channels</h3>
            <p class="mt-1 text-sm text-gray-500">Get started by creating a new channel.</p>
            <div class="mt-6">
              <a href="/admin/channels/new" class="inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
                <svg class="-ml-1 mr-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                </svg>
                Add Channel
              </a>
            </div>
          </div>
        {{/if}}
      </div>
    </div>
  </div>

  <!-- Recent Content -->
  <div class="bg-white shadow rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="sm:flex sm:items-center sm:justify-between">
        <h3 class="text-lg leading-6 font-medium text-gray-900">Recent Content</h3>
        <div class="mt-3 sm:mt-0 sm:ml-4">
          <a href="/admin/contents" class="text-sm text-blue-600 hover:text-blue-800 font-medium">View all â†’</a>
        </div>
      </div>
      <div class="mt-6">
        {{#if recentContents.length}}
          <ul class="divide-y divide-gray-200">
            {{#each (slice recentContents 0 5)}}
              <li class="py-3">
                <div class="flex items-center space-x-3">
                  <div class="flex-1 min-w-0">
                    <p class="text-sm font-medium text-gray-900 truncate">{{this.title}}</p>
                    <p class="text-sm text-gray-500 truncate">
                      {{this.channelId.name}} â€¢ 
                      {{#if (eq this.status 'ANALYZED')}}
                        <span class="text-green-600">Analyzed</span>
                      {{else if (eq this.status 'PROCESSING')}}
                        <span class="text-yellow-600">Processing</span>
                      {{else if (eq this.status 'FAILED')}}
                        <span class="text-red-600">Failed</span>
                      {{else}}
                        <span class="text-blue-600">{{this.status}}</span>
                      {{/if}}
                    </p>
                  </div>
                  <div class="flex-shrink-0">
                    <a href="/admin/contents/{{this._id}}" class="text-blue-600 hover:text-blue-800 text-sm font-medium">View</a>
                  </div>
                </div>
              </li>
            {{/each}}
          </ul>
        {{else}}
          <div class="text-center py-6">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No content</h3>
            <p class="mt-1 text-sm text-gray-500">Content will appear here once channels start pulling data.</p>
          </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<script>
  async function startAllPolling() {
    try {
      const response = await fetch('/admin/jobs/start-all-polling', { method: 'POST' });
      const result = await response.json();
      showJobStatus(result.success ? 'success' : 'error', result.message);
    } catch (error) {
      showJobStatus('error', 'Error starting polling: ' + error.message);
    }
  }

  async function stopAllPolling() {
    try {
      const response = await fetch('/admin/jobs/stop-all-polling', { method: 'POST' });
      const result = await response.json();
      showJobStatus(result.success ? 'success' : 'error', result.message);
    } catch (error) {
      showJobStatus('error', 'Error stopping polling: ' + error.message);
    }
  }

  function showJobStatus(type, message) {
    const statusDiv = document.getElementById('jobStatus');
    const contentDiv = document.getElementById('jobStatusContent');
    
    statusDiv.classList.remove('hidden');
    
    if (type === 'success') {
      contentDiv.className = 'rounded-md p-4 bg-green-50 border border-green-200';
      contentDiv.innerHTML = `
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-green-400" fill="none" viewBox="0 0 20 20" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-green-800">${message}</p>
          </div>
        </div>
      `;
    } else {
      contentDiv.className = 'rounded-md p-4 bg-red-50 border border-red-200';
      contentDiv.innerHTML = `
        <div class="flex">
          <div class="flex-shrink-0">
            <svg class="h-5 w-5 text-red-400" fill="none" viewBox="0 0 20 20" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <div class="ml-3">
            <p class="text-sm font-medium text-red-800">${message}</p>
          </div>
        </div>
      `;
    }
    
    setTimeout(() => {
      statusDiv.classList.add('hidden');
    }, 5000);
  }
</script> 